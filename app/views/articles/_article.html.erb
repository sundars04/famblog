<% obj.each do |article| %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to article.title, article_path(article) %>
        </div>
        <div class="article-meta">          
          <p class="date">Published by: <%= article.user.username if article.user %> on <%= "#{article.created_at.to_time.strftime('%B %e at %l:%M %p')}" %> </p>
        </div>
        <div class="article-body">
          <%= article.description.truncate(100) %>
          <p class="comment_count"><%= pluralize(article.comment_threads.count, "Comment") %></p>
        </div>
        
        <br>
        <% if article.categories.any? %>
          <p>Categories: <%= render article.categories %></p>
        <% end -%>
      </div>
    </div>
  </div>
<% end -%>
